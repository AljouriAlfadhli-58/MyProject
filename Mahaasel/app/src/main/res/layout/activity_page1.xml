<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Page1"
    android:background="@color/colorPrimaryDark">


    <EditText
        android:id="@+id/username"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/edit_round"
        android:ems="10"
        android:hint="  Enter your username"
        android:inputType="textPersonName"
        android:textColor="#7E7878"
        android:textSize="20sp"

        />

    <EditText
        android:id="@+id/password"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="310dp"
        android:background="@drawable/edit_round"
        android:ems="10"
        android:hint="  Enter yout password"
        android:inputType="textPassword"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/userimg"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="245dp"
        app:srcCompat="@drawable/usernname"
        android:layout_marginStart="40dp"/>



    <ImageView
        android:id="@+id/passimg"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="315dp"
        android:layout_marginStart="40dp"
        app:srcCompat="@drawable/lock2" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_marginTop="550dp"
        app:srcCompat="@drawable/button"
        android:layout_marginStart="300dp"/>

    <ImageView
        android:id="@+id/next1"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginStart="290dp"
        android:layout_marginTop="554dp"
        app:srcCompat="@drawable/ic_baseline_arrow_forward_24" />

    <Button
        android:id="@+id/button2"
        android:layout_width="251dp"
        android:layout_height="40dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/white"
        android:outlineAmbientShadowColor="@color/colorPrimaryDark"
        android:outlineSpotShadowColor="@color/colorPrimaryDark"
       android:shadowColor="@color/colorPrimaryDark"
        android:text="No account? Create an account"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/backkground">


        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="90dp"
            app:srcCompat="@drawable/circle" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon"
            android:layout_marginStart="140dp"
            android:layout_marginTop="90dp"/>



    </RelativeLayout>


</RelativeLayout>