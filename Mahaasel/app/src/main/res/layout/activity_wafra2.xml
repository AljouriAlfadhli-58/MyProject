<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellow"
    tools:context=".wafra2">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icon"
        android:layout_marginStart="135dp"
        android:layout_marginTop="60dp"/>



    <Button
        android:id="@+id/buy"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Buy now"
        android:textSize="23sp"
        android:layout_marginStart="30dp"
        android:background="@drawable/white"
        android:layout_marginTop="600dp"
        android:textColor="@color/colorAccent"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Continue shopping"
        android:textSize="15sp"
        android:layout_marginStart="210dp"
        android:background="@drawable/white"
        android:layout_marginTop="600dp"
        android:textColor="@color/colorAccent"/>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorAccent"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="249dp"
        android:layout_marginTop="490dp"
        android:fontFamily="casual"
        android:text="سعر التوصيل:"
        android:textColor="#000000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginStart="269dp"
        android:layout_marginTop="539dp"
        android:fontFamily="casual"
        android:text="الاجمالي:"
        android:textColor="#050505"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="94dp"
        android:layout_height="50dp"
        android:text="1.000د.ك"
        android:textColor="#020202"
        android:textSize="25sp"
        android:layout_marginTop="490dp"
        android:layout_marginStart="140dp"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.500د.ك"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_marginStart="190dp"
        android:layout_marginTop="539dp"/>

    <RelativeLayout
        android:layout_width="366dp"
        android:layout_height="107dp"
        android:layout_marginTop="220dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/white">

        <ImageView
            android:id="@+id/imgkhyar"
            android:layout_width="102dp"
            android:layout_height="52dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/lettuce" />

        <TextView
            android:id="@+id/product1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="290dp"
            android:layout_marginTop="20dp"
            android:text="المنتج:"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txt5"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:layout_marginTop="20dp"
            android:text="خس"
            android:textColor="#040304"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="290dp"
            android:layout_marginTop="60dp"
            android:text="السعر:"
            android:textColor="#0B0A0B"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txt8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="210dp"
            android:layout_marginTop="65dp"
            android:text="2.500 د.ك"
            android:textColor="#040304"
            android:textSize="20sp" />

    </RelativeLayout>


</RelativeLayout>